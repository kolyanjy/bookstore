%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('devise.login')
    -# = render '/devise/shared/facebook_link'
    %p.general-login-text
      = t('devise.or')
  .general-form.field
    = simple_form_for(resource, as: resource_name, validate: true, defaults: { input_html: { class: "form-control" }}, url: session_path(resource_name)) do |f|
      .form-group.mb-30
        = f.input :email, autocomplete: "email", placeholder: t('devise.email')
      .form-group.mb-30
        = f.input :password, autocomplete: "current-password", placeholder: t('devise.password')
        = link_to t('devise.forgot_password'), new_password_path(resource_name), class: 'help-block in-gold-500'
      - if devise_mapping.rememberable?
        .form-group.checkbox.text-center.mb-30
          %label.checkbox-label
            = f.check_box :remember_me, hidden: "true" , class: 'checkbox-input'
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text
              = t('devise.login.remember_me')
      .text-center
        .actions
          = f.submit t('devise.login'), class: 'btn btn-default mb-20'
    .text-center
      %p.general-sign-text.text-center
      = t('devise.have_not_account')
      = link_to t('devise.registrations.sign_up'), new_registration_path(resource_name), class: 'in-gold-500'
