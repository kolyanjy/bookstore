.col-sm-5
  %p.in-gold-500.font-18.mb-25
    =t('settings.email')
  = simple_form_for(current_user, url: user_registration_path, validate: true, defaults: { input_html: { class: "form-control" }}, method: :patch) do |f|
    = f.input :id, :as => :hidden, :input_html => { :value => "#{current_user.id}" }
    .form-group.mb-35
      = f.input :email, input_html: { value: "#{current_user.email}"}
    .general-text-align
      = f.submit t('btn.save'), class: 'btn btn-default mb-35 email-btn'
