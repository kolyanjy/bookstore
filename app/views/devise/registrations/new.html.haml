%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('devise.login')
    -# = render '/devise/shared/facebook_link'
    %p.general-login-text
      = t('user.or')
  .general-form.field
    = simple_form_for(resource, validate: true, as: resource_name, defaults: { input_html: { class: "form-control" }}, url: registration_path(resource_name)) do |f|
      .form-group.mb-30
        = f.input :email, autocomplete: "email", placeholder: t('devise.email')
      .form-group.mb-30
        = f.input :password, autocomplete: "current-password", placeholder: t('devise.password')
      .form-group.mb-30
        = f.input :password_confirmation, autocomplete: "new-password", placeholder: t('devise.confirm')
      .text-center
        .actions
          = f.submit t('devise.sign_up'), class: 'btn btn-default mb-20'
      .text-center
        %p.general-sign-text.text-center
        = t('devise.have_account')
        = link_to t('user.login.log_in'), new_session_path(resource_name), class: 'in-gold-500'
