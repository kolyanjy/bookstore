.input-group.general-position.margin-0
  = link_to order_item_path(order_item.id, :operation => 'minus'), method: :patch, class: 'input-link b-n pt-7' do
    %i.fa.fa-minus.line-height-40.cursor-pointer
  %input.form-control.quantity-input.input-count-book{type:"text", disabled: true, required: true, value: order_item.quantity}
  = link_to order_item_path(order_item.id, :operation => 'plus'), method: :patch, class: 'input-link b-n pt-7' do
    %i.fa.fa-plus.line-height-40.cursor-pointer
