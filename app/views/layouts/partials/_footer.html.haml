%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('btn.home'), root_path, class: 'nav-link'
          %li
            = link_to t('btn.books'), books_path, class: 'nav-link'
          %li
            %a.nav-link{href: "#"}
              = t('btn.orders')
          %li
            %a.nav-link{href: "#"}
              = t('btn.settings')
      .col-sm-3
        %p.general-nav-mail
          = t('contacts.email')
        %p.general-nav-number
          = t('contacts.number')
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
