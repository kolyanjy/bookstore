%tr
  %td
    = link_to order_path(orders) do
      %span.general-order-number
        = orders.number
  %td
    %span.in-grey-900.font-16.fw-300
      = orders.order_created_at
  %td
    %span.font-16.in-grey-900.fw-300
      = orders.status.split('_').join(' ').capitalize
  %td
    %strong.font-16
      = number_to_currency(orders.order_summary)
