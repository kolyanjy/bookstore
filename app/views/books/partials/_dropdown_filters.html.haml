%a#filter-dropdown.dropdown-toggle.lead.small{'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  - sort = params[:sort]
  - if sort
    - unless Books::SortQuery::FILTERS.include?(sort.to_sym)
      - sort = t("filters.#{Books::SortQuery::DEFAULT_FILTER}")
  - else
    - sort = t("filters.#{Books::SortQuery::DEFAULT_FILTER}")
  = t(sort, scope: [:filters])
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li
    = link_to t('filters.title_asc'), url_for(sort: :title_asc, category: category), class: "collapse-link"
  %li
    = link_to t('filters.title_desc'), url_for(sort: :title_desc, category: category), class: "collapse-link"
  %li
    = link_to t('filters.created_at'), url_for(sort: :created_at, category: category), class: "collapse-link"
  %li
    = link_to t('filters.price_asc'), url_for(sort: :price_asc, category: category), class: "collapse-link"
  %li
    = link_to t('filters.price_desc'), url_for(sort: :price_desc, category: category), class: "collapse-link"
  %li
    = link_to t('filters.popular'), url_for(sort: :created_at, category: category), class: "collapse-link"
