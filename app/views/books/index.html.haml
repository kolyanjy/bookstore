%main.container
  %h1.general-title-margin Ð¡atalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        = render partial: 'books/partials/dropdown_filters', locals: { sort: @current_sort, category: params[:category] }
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-15
        = link_to books_path, class: 'filter-link' do
          = t('book.all')
          %span.badge.general-badge
            = @presenter.books_count
      - @load_categories.each do |category|
        %li.mr-15
          = link_to books_path(category: category), class: 'filter-link' do
            = category.name
            %span.badge.general-badge
              = @presenter.category_books_count(category.id)
  .mb-120
    .row
      - @books.decorate.each do |book|
        .col-xs-6.col-sm-3.book_in_catalog
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              = image_tag(book.first_book_image(:medium_img), class: "img-shadow general-thumbnail-img", alt: "design-book")
              .thumb-hover
                .general-thumb-link-wrap
                  = link_to book_path(book.id), class: 'thumb-hover-link' do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          .general-thumb-info
            %p.title
              = book.name
            %p.font-16.in-gold-500
              = t('book.price', price: book.price)
            %span.divider-sm
            %p.lead.small
              = book.authors_title
    .text-center
      = raw pagy_bootstrap_nav(@pagy)
